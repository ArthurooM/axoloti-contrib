      <code.declaration><![CDATA[int8_t _note;
uint8_t _velo;
uint8_t pren;
uint8_t prev;
bool trig;
bool trigoff;
bool stop;
bool start;
uint8_t i;
bool doit;
uint8_t target;

static const uint8_t LENGTHPOW = 5;
static const uint8_t POLY = attr_polyphony;
static const uint8_t BITS = 8;
static const uint8_t GAIN = 20;
uint8_t array [POLY << 1];]]></code.declaration>
      <code.init><![CDATA[pren = 0;
prev = 0;
_note = 0;
_velo = 0;
for ( i = 0;i < (POLY << 1);i ++) array [i] = 0;
stop = 0;
start = 0;]]></code.init>
      <code.krate><![CDATA[top:
doit = 0;
trig = 0;
trigoff = 0;
outlet_retrig = 0;

if ((inlet_note != pren) || (inlet_velo != prev)){
	pren = inlet_note;
	prev = inlet_velo;
	_velo = inlet_velo;
	_note = inlet_note;
	if (_velo) trig = 1;	
		else trigoff = 1;		
}

if (trig) {
	//retrig
	for (i = 0;i < POLY;i ++){
		if (array [i + POLY] == (_note + 1)){
			target = i;
			doit = 1;	
			outlet_retrig = 1;
			}
		
		}	
	//trigger on
	if (!doit){
	for (i = 0;i < POLY;i ++) if ((!array [i]) && (!array [i +POLY])) {target = i; doit = 1;}	
		}
	//kill
	if (!doit && param_kill){
	for (i = 0;i < POLY;i ++) if (!array [i] ) {target = i; doit = 1;}
	}
						
}
//trigger off
if (trigoff) {
	for (i = 0;i < POLY;i ++)if (array [i] == (_note + 1)){target = i;doit = 1;}
	}

	//start/stop
//stop
if  (inlet_stop && (!stop)) {
	stop = 1;
	for (i = 0;i < POLY;i ++){
		if ((array [i] == (inlet_stopnote + 1)) ||( array [i +POLY] == (inlet_stopnote + 1))) {
			target = i;
			_note = inlet_stopnote;
			_velo = 0;
			doit = 1;
			if (param_stopHard) outlet_retrig = 1;
		}
	}		
}
	if  (!inlet_stop) stop = 0;
//start
if  (inlet_start && (!start)) {
	start = 1;
	for (i = 0;i < POLY;i ++) if (array [i] == inlet_startnote + 1) goto top;						
	for (i = 0;i < POLY;i ++){
		if (!array [i + POLY]) {
			target = i;
			_note = inlet_startnote;
			_velo = 127;
			doit = 1;
		}
	}
	if (!doit && param_kill){
		for (i = 0;i < POLY;i ++){
			if (!array [i] ) {
				target = i;
				doit = 1;
				_note = inlet_startnote;
				_velo = 127;
				}
		}
	}						
}
	if  (!inlet_start) start = 0;
	
if (doit) {
	outlet_note = _note;
	outlet_velo = _velo;
	outlet_target = target;
}]]></code.krate>
   </obj.normal>
