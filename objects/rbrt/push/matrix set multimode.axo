      <code.declaration><![CDATA[uint8_t out [64];
uint8_t preout [64];
uint8_t counter;
uint8_t mcolor [4];
uint8_t mbrt;
bool trig;

// calculate color and brightness
uint8_t getcolor(uint8_t color,uint8_t brightness)
{
	uint8_t result;
	uint8_t bness;
	if (color > 1) bness = (2-(brightness));
	else bness = brightness;
	result = color + bness;
	return result;
}]]></code.declaration>
      <code.init><![CDATA[mcolor [1] = attr_clrMode1;
mcolor [2] = attr_clrMode2;
mcolor [3] = attr_clrMode3;]]></code.init>
      <code.krate><![CDATA[if (inlet_redraw && !trig){
	trig = 1;
	int i;
	for (i = 0;i < 64;i++) preout [i] = 128;
}
if (!inlet_redraw) trig = 0;

if (!attr_playmode.array[(counter << attr_blocksize) + attr_index]){
	if (attr_holdmap.array [counter]) out [counter] = getcolor (attr_clrHold,attr_brtHold);
		else out [counter] = 0;
	}
	else {	
	if (attr_statemap.array[counter]) mbrt = attr_brtOn;
	else mbrt = attr_brtOff;
 	out[counter] = getcolor (mcolor [attr_playmode.array[(counter << attr_blocksize) + attr_index]],mbrt);
		}
if (inlet_select) out [inlet_pad] = getcolor (attr_clrSelect,attr_brtSelect);	
	
if (!MidiGetOutputBufferPending(MIDI_DEVICE_USB_HOST)){
	if (out[counter] != preout [counter] ){
		preout [counter] = out [counter];
		MidiSend3(MIDI_DEVICE_USB_HOST,2, MIDI_NOTE_ON,counter + 36,out [counter]);	
		}
	}
	
if (counter < 63) counter ++;
else counter = 0;]]></code.krate>
