<objdefs appVersion="1.0.12">
   <obj.normal id="autoFit" uuid="7b17a16f-0499-4230-a5ab-f329031c7bce">
      <sDescription>allocate 16bit table in SDRAM memory, -128.00 .. 127.99</sDescription>
      <author>Johannes Taelman</author>
      <license>BSD</license>
      <helpPatch>table.axh</helpPatch>
      <inlets>
         <int32 name="count"/>
         <int32 name="max"/>
      </inlets>
      <outlets>
         <frac32 name="out"/>
      </outlets>
      <displays/>
      <params>
         <frac32.u.map name="CV"/>
         <frac32.s.map.lfopitch name="rate"/>
         <int32 name="steps">
            <MinValue i="1"/>
            <MaxValue i="66000"/>
         </int32>
         <int32 name="wait">
            <MinValue i="1"/>
            <MaxValue i="2000"/>
         </int32>
         <frac32.s.map name="rnd"/>
      </params>
